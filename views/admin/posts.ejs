<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>

<% posts.forEach(function (post, index) { %>
    <p><h2><a href="/admin/editor/<%= post._id %>"><%= post.title %></a></h2></p>
    <p class="info">
        作者：<%= author.name %>
        日期：<%= post.published_at %>
    </p>
    <p><%- post.content %></p>
<% }) %>

</body>
</html>
